<div class="page-width page-content">

  {% include 'breadcrumbs' %}

  <div class="grid">
    <div class="grid__item">
      {% if cart.item_count > 0 %}
        <header class="section-header">           
          <h1 class="section-header__title" style="
    text-align: center;
">Shopping Cart</h1>
          <span class="insert_cart_notification"></span>

        </header>

        <form action="/cart" method="post" novalidate class="cart">
          <div class="visible-xs medium-up--hide top-checkout-btn">
            <div style="display:flex!important;margin: 0 -5px;margin-bottom: 20px;">
              <a class="btn btn--ys" data-ocu-checkout="true" data-disable-recharge="true" style="
    margin-right: 5px;
    width: 49%;
    background: #303030;
    padding: 20px 0px;
    height: 55px;
    white-space: nowrap;
    font-size: 9px;
    line-height: 1.4;
" href="/collections/harem-gardens-best-sellers">Continue Shopping</a>
              <button type="submit" name="checkout" class="btn btn--ys" style="
    margin-right: 5px;
    width: 49%;
    background: #ff6d6d;
    padding: 20px 0px;
    height: 55px;
    white-space: nowrap;
    font-size: 9px;
    line-height: 1.4;
    text-align: center;
    display: block;
" data-ocu-checkout="true" data-disable-recharge="true"> Proceed to checkout </button>
            </div>
          </div>
          <div class="cart__row small--hide">
            <div class="grid grid--full">
              <div class="grid__item medium-up--two-fifths medium-up--push-three-fifths">
                <div class="grid grid--full">
                  <div class="grid__item one-third small--half text-center">
                    {{ 'cart.label.quantity' | t }}
                  </div>
                  <div class="grid__item two-thirds small--half text-right">
                    {{ 'cart.label.total' | t }}
                  </div>
                </div>
              </div>
            </div>
          </div>

          {% for item in cart.items %}
            <div class="cart__row">
              <div class="grid grid--full cart__row--table-large" style="position: relative">

                <div class="grid__item medium-up--three-fifths">
                  <div class="grid">

                    <div class="grid__item one-quarter">
                      <a href="{{ item.url | within: collections.all }}" class="cart__image">
                        {%- assign img_url = item | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        <img class="lazyload"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540]"
                            data-aspectratio="{{ item.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ item.title | escape }}">
                      </a>
                    </div>

                    <div class="grid__item three-quarters">
                      <a href="{{ item.url }}" class="h4 cart__product-name">
                        {{ item.product.title }}
                      </a>
                      {% unless item.variant.title contains 'Default' %}
                        <p class="cart__product-meta">
                          {{ item.variant.title }}
                        </p>
                      {% endunless %}

                      {%- assign property_size = item.properties | size -%}
                      {% if property_size > 0 %}
                        {% for p in item.properties %}
                          {%- assign first_character_in_key = p.first | truncate: 1, '' -%}
                          {% unless p.last == blank or first_character_in_key == '_' %}
                            {{ p.first }}:

                            {% if p.last contains '/uploads/' %}
                              <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                            {% else %}
                              {{ p.last }}
                            {% endif %}

                            <br>
                          {% endunless %}
                        {% endfor %}
                      {% endif %}

                      <p class="cart__product-meta">
                        <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" >
                          {{ 'cart.general.remove' | t }}
                        </a>
                      </p>
                    </div>

                  </div>
                </div>

                <div class="cart-numbers grid__item medium-up--two-fifths">
                  <div class="grid grid--full cart__row--table">

                    <div class="grid__item one-third text-center">

                      <label for="updates_{{ item.key }}" class="visually-hidden">{{ 'cart.label.quantity' | t }}</label>
                      <input type="number" name="updates[]" id="updates_{{ item.key }}" class="cart__product-qty" value="{{ item.quantity }}" min="0" data-id="{{ item.key }}">

                    </div>

                    <div class="grid__item two-thirds text-right">
                      {% if item.original_line_price != item.line_price %}
                        <small class="cart__price cart__price--strikethrough">{{ item.original_line_price | money }}</small>
                      {% endif %}
                        {% if item.product.compare_at_price > item.price %}
                      <span class="cart_compare_price">  <s>{{ item.product.compare_at_price | money }}</s></span>{% endif %}

                      <span class="cart__price">{{ item.price | money }}</span>

                      {%- assign discounts_size = item.discounts | size -%}
                      {% if discounts_size > 0 %}
                        {% for discount in item.discounts %}
                          <small class="cart__discount">{{ discount.title }}</small>
                        {% endfor %}
                      {% endif %}
                    </div>
                  </div>
                </div>

              </div>
            </div>
          {% endfor %}


          <div class="cart__row last-child" >
            <div class="super-in-cart-now medium-up--hide" >
              <div data-appears-component-name="listings_nudge_incartonly">
                <div class="ui-toolkit appears-ready">
                  <div class="nudge-wrapper  pt-xs-2 pl-md-0 pt-md-0 pb-md-0 mt-xs-2 mt-md-0 bt-xs-1 bt-md-0">
                    <div class="flag">
                      <div class="flag-body">
                        <span class=" super-text-for-shipping"></span>
                      </div>
                      <div class="flag-img vertical-align-top nudge-cart-ding-icon is-in-view" data-add-class-when-in-view="is-in-view">
                        <span class="inline-svg"><img class="super-cart-anii cart-frame" src="{{'cdr.png' | asset_img_url: '668x'}}"></span>
                      </div>

                    </div>
                  </div>
                </div>
              </div>

            </div>

            <div class="grid grid--full cart__row--table-large">
              {% comment %}
                Optional, add a textarea for special notes
                  - Your theme settings can turn this on or off. Default is on.
                  - Make sure you have name="note" for the message to be submitted properly
              {% endcomment %}
              {% if settings.cart_notes_enable %}
                <div class="grid__item medium-up--seven-twelfths">
                  <div class="cart__note">
                    <label for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
                    <textarea name="note" class="input-full" id="CartSpecialInstructions">{{ cart.note }}</textarea>
                  </div>
                </div>
              {% endif %}
               <div class="grid__item medium-up--seven-twelfths mobile-text-center" style="vertical-align: top">
                          
                 <button type="submit" name="update" class="btn btn--secondary update-cart ">
                     {{ 'cart.general.update' | t }}
                 </button>
                 <a href="/collections/styles" class="btn btn--secondary continue-shopping medium-down--hide">
                   Continue Shopping
                 </a> 
               </div>

 
              <div class="grey-background checkoo grid__item medium-up--push-two-twelfths medium-up--three-twelfths text-center">
                <div class=" ">
                  <div class="" style="
    border-bottom: 1px solid black;
    padding-bottom: 10px;

">
                    <h1 class="section-header__title" style="">{{ 'cart.general.subtotal' | t }}</h1>
                  </div>
                  <div class="">
                    <p class="h4 cart__subtotal" style="
    padding-top: 10px;
    font-size: 18px;
">{{ cart.total_price | money }}</p>
                  </div>
                </div>
                
                {% if cart.total_discounts > 0 %}
                  {%- assign cartTotalDiscounts = cart.total_discounts | money -%}
                  <p class="cart__savings">{{ 'cart.general.savings_html' | t: savings: cartTotalDiscounts }}</p>
                {% endif %}
                  {{ 'cart.general.shipping_at_checkout' | t }}
                  {% if settings.enable_currencies %}
                  {{ 'cart.general.orders_processed_in_currency_html' | t: currency: shop.currency }}
                  {% endif %}
                {% if settings.cart_terms_conditions_enable %}
                  <p class="ajaxcart__note ajaxcart__note--terms">
                    <input type="checkbox" id="CartPageAgree" />
                    <label for="CartPageAgree">
                      {% if settings.cart_terms_conditions_link != blank %}
                        {{ 'cart.general.terms_html' | t: url: settings.cart_terms_conditions_link }}
                      {% else %}
                        {{ 'cart.general.terms' | t }}
                      {% endif %}
                    </label>
                  </p>
                {% endif %}

                {% if additional_checkout_buttons and settings.cart_additional_buttons %}
                  <div class="additional_checkout_buttons">{{ content_for_additional_checkout_buttons }}</div>
                {% endif %}
                 <button type="submit" name="checkout" class="btn cart__checkout{% if settings.cart_terms_conditions_enable %} cart__checkout--page{% endif %}">
                  {{ 'cart.general.checkout' | t }}
                </button>
                <img src="https://cdn.shopify.com/s/files/1/1703/7891/files/under-atc.png?7251921903420976893" alt=""  class="payment-ico-trust"/>
              </div>
            </div>

          </div>
        </form>

      {% else %}
        <header class="section-header section-header--404">
          <h1 class="section-header__title">{{ 'cart.general.title' | t }}</h1>
          <div class="rte text-spacing">
            <p>{{ 'cart.general.empty' | t }}</p>
            <p >{{ 'cart.general.continue_browsing_html' | t }}</p>
          </div>
        </header>
      {% endif %}
    </div>
  </div>
</div>

