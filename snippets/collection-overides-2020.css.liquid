body div#relatead-product-slider .single-product-wrapper {
	border: 1px solid #DCDCDC;
	margin: 0px 5px; 
	position: relative;
}

li.single-product-wrapper .single-product-item a:before, div#relatead-product-slider li.single-product-wrapper .single-product-item a:before {
	content: none;
}

li.single-product-wrapper .single-product-item .add_to_cart_button.w-full, div#relatead-product-slider li.single-product-wrapper .single-product-item .add_to_cart_button.w-full {
	opacity: 1;
}

li.single-product-wrapper {
	position: relative;
}

        

select.select-collection {
	border: none;
	box-shadow: none;
	margin-top: -5px;
	background-color: #fff;
	max-width: 200px;
	margin-right: 30px;
}
li.single-product-wrapper:hover .add_to_cart_button.w-full {
    background: #F7A28D!important;
}
@media (min-width:767px) {
	span.product-tag-newz {
		bottom: 24px;
	}
} 

@media (max-width:767px) {
	.image-block {
		order: 1;
	}
	body .single-product-wrapper {
		border: none;
	}
	.title-block {
		order: 2;
		margin: 0 auto;
	}
	.button-block {
		order: 3;
	}
}